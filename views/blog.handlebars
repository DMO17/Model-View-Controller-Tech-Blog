<header>
  {{#if loggedIn}}
  {{> private-navbar}}
  {{else}}
  {{> public-navbar}}
  {{/if}}
</header>


<main class="bg-img">
  <section class="view-page">
    <div class="item photo">
  <div class="m-5">
    <div class="content">
      <div class="title text-center mb-2">{{title}}</div>

      <div class="mb-3">  {{"user.first_name"}} {{"user.last_name"}} {{"user.username"}} {{"user.email"}} {{createdAt}}</div>

      <img class="photothumb mb-2" src="{{blog_img}}" />

      <div class="desc mt-3">
        <p class="h4 content-text">{{content}}</p>
      </div>
    </div>
  </div>

</div>

    <div class="container d-flex flex-column justify-content-center mt-100 mb-100">

<div><textarea name="" id="" cols="60" rows="5"></textarea></div>

      <div class="row">
        <div class="col-md-12">
          <div class="card">
          {{> comment-post}}
          </div>
        </div>
      </div>
    </div>


  </section>
</main>